<UserControl x:Class="Furniture.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Furniture.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Content="Furniture" Command="{Binding NavigateFurnitureCommand }" Grid.Row="0"/>
        <Button Content="Sellers" Command="{Binding ShowSellerInterface }" Grid.Row="1"/>
        <Button Content="Add" Command="{Binding NavigateAddFurnitureToOrderCommand }" Grid.Row="2"/>
    </Grid>
</UserControl>
