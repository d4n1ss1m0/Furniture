<UserControl x:Class="Furniture.Views.AddFurnitureToOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Furniture.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <ScrollViewer>
        <Grid x:Name="Grid" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="691*"/>
                <ColumnDefinition Width="92*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="67*"/>
                <RowDefinition Height="383*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Товары" FontSize="40" HorizontalContentAlignment="Center" Grid.ColumnSpan="2"></Label>
            <Button x:Name="CartBtn"  Grid.Column="1" Grid.Row="0" Command="{Binding NavigateCreateOrderCommand }">
                <Image Source="../Image/boss.png" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"/>
            </Button>
            <StackPanel x:Name="Panel" Grid.Row="1" Grid.ColumnSpan="2">

            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
